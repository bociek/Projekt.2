{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.view_podcasts'|trans }}
{% endblock %}

{% block body %}

    <style>
        table {border: 4px solid #8959A8;}
        th, td {
            border: 2px solid #8959A8;
            text-align: center;
            background-color: plum;
            font-family: sans-serif;
            color: white}
    </style>

    <h1>
        {{ 'table.podcasts_view'|trans }}
    </h1>

    {% if paginator.data is defined and paginator.data|length %}
        <table>
            <tr>
                <th>{{ 'table.episode_id'|trans }} </th>
                <th>{{ 'table.episode_title'|trans }} </th>
                <th>{{ 'table.title'|trans }} </th>
                <th>{{ 'table.author'|trans }} </th>
            </tr>
            {% for row in paginator.data %}
                <tr>
                    <td>{{ row.episode_id }}</td>
                    <td>{{ row.episode_title }}</td>
                    <td>{{ row.title }}</td>
                    <td>{{ row.author }}</td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <div>
            List is empty!
        </div>
    {% endif %}

{% endblock %}