{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.albums'|trans }}
{% endblock %}

{% block body %}

   {# {% include 'default/_paginator.html.twig' with {
        paginator: paginator,
        route_name: 'album_index',
    } %}#}


    <h1>
        {{ 'table.albums'|trans }}
    </h1>
    {% if album is defined and album|length %}
        <table>
            <tr>
                <th>{{ 'table.artist'|trans }} </th>
                <th>{{ 'table.album'|trans }} </th>
                <th>{{ 'table.year'|trans }} </th>
            </tr>
            {% for row in album %}
                <tr>
                    <td>{{ row.artist }}</td>
                    <td><a href= "{{ url('album_display', {'id': row.album_id}) }}">{{ row.album }}</a></td>
                    <td id="year">{{ row.year }}</td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <div>
            List is empty!
        </div>
    {% endif %}

    {#{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <h3>
        <li><a href="{{ url('album_add') }}">{{ 'add.album.label'|trans }}</a></li>
    </h3>
    {% endif %}#}
    <h3>
        <li><a href="{{ url('homepage') }}">{{ 'homepage.back.label'|trans }}</a></li>
    </h3>

{% endblock %}