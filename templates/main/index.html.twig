{% extends "base.html.twig" %}

{% block title %}
    {{ 'title.homepage'|trans }}
{% endblock %}

{% block body %}
    <h3>
        <li><a href="{{ url('auth_login') }}">{{ 'auth.login.label'|trans }}</a></li>
        <li><a href="{{ url('auth_register') }}">{{ 'auth.register.label'|trans }}</a></li>
    </h3>

    <h1>
        <img src="{{ asset('images/mushelf.png') }}" alt="logo" />
    </h1>

    <h2>
        Welcome to our application. You can store all your favourite media in one place. Join our family!
    </h2>

    <h3>
        <li><a href="{{ url('album_index') }}">{{ 'table.albums'|trans }}</a></li>
        <li><a href="{{ url('audiobook_index') }}">{{ 'table.audiobooks'|trans }}</a></li>
        <li><a href="{{ url('podcast_index') }}">{{ 'table.podcasts'|trans }}</a></li>
    </h3>
{% endblock %}