{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.view_audiobooks'|trans }}
{% endblock %}

{% block body %}

    <h1>
        {{ 'table.audiobooks_view'|trans }}
    </h1>

    {% if audiobook is defined and audiobook|length %}
        <table>
            <tr>
                <th>{{ 'table.chapter_id'|trans }} </th>
                <th>{{ 'table.chapter_title'|trans }} </th>
               {# <th>{{ 'table.title'|trans }} </th>
                <th>{{ 'table.author'|trans }} </th>#}
            </tr>
            {% for row in audiobook %}
                <tr>
                    <td>{{ row.chapter_id }}</td>
                    <td>{{ row.chapter_title }}</td>
                   {# <td>{{ row.title }}</td>
                    <td>{{ row.author }}</td>#}
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <div>
            List is empty!
        </div>
    {% endif %}

    <h3>
        <li><a href="{{ url('audiobook_index') }}">{{ 'index.back.label'|trans }}</a></li>
    </h3>
    <h3>
        <li><a href="{{ url('homepage') }}">{{ 'homepage.back.label'|trans }}</a></li>
    </h3>

{% endblock %}